import streamlit as st

nota_1= st.number_input("Digite a primeira do aluno: ", min_value=0, max_value=10,step=1)
nota_2 = st.number_input("Digite a segunda nota: ", min_value=0,max_value=10,step=1)
media = (nota_1 + nota_2) / 2

if st.button("Verificar"):
    if media>= 7:
        st.write(f"Aprovado,média foi:  {media}")
    else:
        st.write(f"Reprovado,média foi: {media}.")
else:
    st.write("Informe a media.")
    
