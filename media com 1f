import streamlit as st

st.title("""Escrever um programa de computador que solicite do usuário 3 notas e, ao final, apresente a média e mostre para o usuário se o aluno está aprovado, em recuperação ou reprovado.""")


Nome = st.text_input("Informe o Nome do Aluno: ")
N1 = st.number_input("Digite o N1:",min_value=1,step=1 )
N2 = st.number_input("Digite o N2:",min_value=1,step=1)
N3 = st.number_input("Digite o N3:",min_value=1, step=1)

media = (N1 + N2 + N3) / 3

if st.button("SOMA NOTA"):
    if media >= 7:
        st.success(f"Aprovado, sua média foi: {media: .1f} ")
    elif media <= 4:
        st.error(f"Reprovado, sua média foi: {media: .1f} ")
    else:
        st.warning(f"Recuperaçao, sua media foi: {media: .1f}")
else:    
 st.warning("Aguardando.")
